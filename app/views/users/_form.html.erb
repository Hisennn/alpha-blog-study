<% if @user.errors.any? %>
<div class="flex flex-col gap-2">
  <h3 class="text-[1.125rem] text-red-400 font-medium">The following errors prevented the user from being created:</h3>
  <ul class="text-red-200 list-disc italic ml-8">
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>


<%= form_with model: @user, html: { 'data-turbo': false } do |f| %>
<div class="flex flex-col max-w-[600px] mx-auto gap-0.5 leading-snug">
  <div class="flex flex-col gap-1">
    <%= f.label :username, class: "text-2xl text-gray-300 font-medium" %><br>
    <%= f.text_field :username, cols: 40,
      placeholder: "Enter a username",
      class: "border border-gray-600 focus:border-gray-300 text-gray-200 bg-transparent outline-none px-4 py-2 w-full" %>
  </div>
  <div class="flex flex-col gap-1 mt-4">
    <%= f.label :email, class: "text-2xl text-gray-300 font-medium" %><br>
    <%= f.email_field :email,
      placeholder: "email@example.com",
      class: "border border-gray-600 focus:border-gray-300 text-gray-200 bg-transparent outline-none px-4 py-2 w-full" %>
  </div>
  <div class="flex flex-col gap-1 mt-4">
    <%= f.label :password, class: "text-2xl text-gray-300 font-medium" %><br>
    <%= f.password_field :password,
      placeholder: "Enter a password",
      class: "border border-gray-600 focus:border-gray-300 text-gray-200 bg-transparent outline-none px-4 py-2 w-full" %>
  </div>

  <div class="flex justify-center mt-8">
    <%= f.submit class: "text-gray-100 font-semibold bg-blue-500 hover:bg-blue-700 hover:text-gray-300 text-2xl py-2 px-4 transition-all duration-200 ease-in-out cursor-pointer"%>
  </div>
</div>
<%end%>