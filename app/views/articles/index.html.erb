<div class="container max-w-[1200px] mx-auto flex flex-col gap-16 p-4 items-center">
  <h1 class="font-medium text-4xl text-gray-100 text-center">Articles Page</h1>

  <% @articles.each do |article| %>
    <div class="bg-gray-200 rounded-sm shadow-md py-6 px-6 w-full flex flex-col gap-4 leading-tight">
      <span class="text-center italic text-gray-800 px-2 pb-4 border-b border-gray-400 text-[0.925rem]">by User</span>
      <div class="justify-start flex flex-col gap-1 px-2 pb-4 border-b border-gray-400">
        <h2 class="text-[1.575rem] font-semibold text-gray-900"><%= truncate(article.title, length: 40) %></h2>
        <p class="text-gray-700 text-[1.075rem]"><%= truncate(article.description, length: 150) %></p>
      </div>
      <span class="text-gray-600 text-[0.825rem] text-center px-2 pb-4 border-b border-gray-400">Created <%= time_ago_in_words(article.created_at) %> ago, Edited <%= time_ago_in_words(article.updated_at) %> ago</span>
      <div class="flex justify-center items-center gap-2 font-bold">
        <%= link_to 'Show', article_path(article), class: "rounded-sm text-blue-100 px-4 py-2 bg-blue-700 hover:bg-blue-900" %>
        
        <%= link_to 'Edit', edit_article_path(article), class: "rounded-sm text-green-100 px-4 py-2 bg-green-700 hover:bg-green-900" %>
      
        <%= button_to 'Delete', article_path(article),
            method: :delete,
            data: { turbo_confirm: "Are you sure?" },
            class: "rounded-sm text-red-100 cursor-pointer px-4 py-2 bg-red-700 hover:bg-red-900" %>
      </div>
    </div>
  <% end %>
</div>