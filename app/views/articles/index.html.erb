<div class="container max-w-[1200px] mx-auto flex flex-col gap-12 p-4 items-center">
  <h1 class="font-medium text-4xl text-gray-100 text-center">Articles Page</h1>
  <table class="table-fixed w-full border border-gray-700 border-collapse">
  <thead>
    <tr class="bg-gray-700 text-gray-100">
      <th class="border border-gray-600 px-4 py-2 text-left w-1/4">Title</th>
      <th class="border border-gray-600 px-4 py-2 text-left w-1/2">Description</th>
      <th class="border border-gray-600 px-4 py-2 text-center w-1/5"  colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @articles.each do |article| %>
      <tr class="text-gray-200">
        <td class="border border-gray-600 break-words px-4 py-2 font-semibold align-top"><%= article.title %></td>
        <td class="border border-gray-600 text-top break-words px-4 py-2"><%= article.description %></td>
        <td class="border border-gray-600 px-2 py-2 text-center">
          <%= link_to 'Show', article_path(article), class: "text-blue-400 hover:text-blue-700 hover:underline" %>
        </td>
        <td class="border border-gray-600 px-2 py-2 text-center">
          <%= link_to 'Edit', edit_article_path(article), class: "text-gray-300 hover:text-gray-500 hover:underline" %>
        </td>
        <td class="border border-gray-600 px-2 py-2 text-center">
          <%= button_to 'Delete', article_path(article),
              method: :delete,
              data: { turbo_confirm: "Are you sure?" },
              class: "text-red-500 hover:text-red-800 font-bold cursor-pointer hover:underline" %>
        </td>
    </tr>
  <% end %>
  </tbody>
  </table>

  <%= link_to ' + Create New Article', new_article_path, class: "text-gray-100 bg-blue-500 hover:bg-blue-700 hover:text-gray-300 text-2xl py-2 px-4 transition-all transition-delay-150"%>
</div>