<div class="container max-w-[1200px] mx-auto flex flex-col gap-16 p-4 items-center">
  <h1 class="font-medium text-4xl text-gray-100 text-center">Articles Page</h1>

  <% @articles.each do |article| %>
  <div class="bg-gray-200 rounded-sm shadow-md my-4 mx-6 w-full flex flex-col leading-tight">
    <span class="text-center italic text-gray-800 px-2 py-4  leading-none border-b border-gray-400 rounded-t-sm bg-gray-300 text-[0.925rem]"><%= article.user.username if article.user %></span>
    <div class="justify-start flex flex-col gap-1 px-4 pb-5 mt-5">
      <h2 class="text-[1.575rem] font-semibold text-gray-900"><%= truncate(article.title, length: 40) %></h2>
      <p class="text-gray-700 text-[1.075rem]"><%= truncate(article.description, length: 150) %></p>
    </div>

    <div class="flex flex-wrap justify-center items-center gap-2 p-2 font-semibold border-b border-gray-400">
      <%= link_to 'Show', article_path(article), class: "box-border rounded-sm text-blue-600 border-blue-600 px-4 py-2 border-2 hover:bg-blue-600 hover:text-gray-100 transition-colors duration-300" %>

      <%= link_to 'Edit', edit_article_path(article), class: "rounded-sm px-4 py-2 text-green-700 border-2 border-green-700 hover:bg-green-700 hover:text-gray-100 transition-colors duration-300" %>

      <%= button_to 'Delete', article_path(article),
            method: :delete,
            data: { turbo_confirm: "Are you sure?" },
            class: "rounded-sm text-red-600 cursor-pointer px-4 py-2 border-2 border-red-600 hover:bg-red-600 hover:text-gray-100 transition-colors duration-300" %>
    </div>
    <span class="text-gray-600 text-[0.825rem] text-center px-2 py-5 leading-none bg-gray-300 rounded-b-sm">Created <%= time_ago_in_words(article.created_at) %> ago, Edited <%= time_ago_in_words(article.updated_at) %> ago</span>
  </div>
  <% end %>
</div>